        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">


                @foreach (var image in Model.OrderBy(x => x.Image))
                {
                    if (count == 0)
                    {
                        <li data-target="#carouselExampleIndicators" data-slide-to="@count" class="active"></li>
                    }
                    else
                    {
                        <li data-target="#carouselExampleIndicators" data-slide-to="@count"></li>
                    }
                    count++;
                }

            </ol>



            <div class="carousel-inner">
                @foreach (var image in Model.OrderBy(x => x.Image))
                {
                    if (image.Group == group)
                    {
                        if (count2 == 0)
                        {
                            <div class="carousel-item active">
                                <img class="d-block w-100" src=@Url.Content(image.Image) alt="First slide">
                            </div>
                        }
                        else
                        {
                            <div class="carousel-item">
                                <img class="d-block w-100" src=@Url.Content(image.Image) alt="Second slide">
                            </div>
                        }
                        count2++;

                    }
                }


